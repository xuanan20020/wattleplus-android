<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">

    <ImageView
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:id="@+id/course_search_image_view"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp">
    </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/course_code"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_toEndOf="@id/course_search_image_view"
        android:text="CourseCodePlacerholder"
        tools:ignore="HardcodedText">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/course_name"
        android:textColor="@color/black"
        android:layout_toEndOf="@id/course_search_image_view"
        android:layout_below="@id/course_code"
        android:text="course_name_placeholder">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/course_units"
        android:textColor="@color/black"
        android:layout_toEndOf="@id/course_search_image_view"
        android:layout_below="@id/course_name"
        android:text="course_unit_placeholder">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/wattle_gold"
        android:layout_below="@id/course_units"
        android:layout_marginTop="3dp">
    </LinearLayout>

</RelativeLayout>